<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/layout.ejs")%>
      <div class="right-panel">
        <div class="dynamic-content" style="padding: 30px;">
          <div class="dynamic-title">
            <%= title %>
          </div>

          <form action="" method="post">
            <div class="book-form">
              <label for="title">Title:</label>
              <input type="text" name="title" id="">
            </div>

            <div class="book-form dropdown">
              <label for="author">Author: </label>
              <select name="author" id="author">
                <% authors.forEach(author => { %>
                  <option value="<%= author._id %>"> <%= author.name %> </option>
                <% }) %>
              </select>
            </div>

            <div class="book-form">
              <label for="summary">Book Summary:</label>
              <input type="text" name="summary" id="">
            </div>

            <div class="book-form">
              <label for="isbn">ISBN:</label>
              <input type="text" name="isbn" id="">
            </div>

            <div class="book-form checkbox">
              <label> Genres: </label>
              <div class="genre-container">
                <% genres.forEach(genre => { %>
                  <div class="cb-label">
                    <input type="checkbox" id="<%= genre._id %>" name="genre" value="<%= genre._id %>">
                    <label for="<%= genre._id %>"> <%= genre.name %></label>
                  </div>
                <% }) %>
              </div>
            </div>

            <input type="submit" value="Submit">
          </form>


        </div>

  </body>

</html>