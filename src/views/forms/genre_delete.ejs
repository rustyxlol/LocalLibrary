<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/layout.ejs")%>
      <div class="right-panel">


        <div class="dynamic-content" style="padding: 30px;">
          <div class="dynamic-title">
            <%= title %>: <%= genre.name %>
          </div>

          <h3>Books</h3>
          <% if(typeof genre_books == 'object' && genre_books.length > 0) { %>
            <div class="delete-message">Delete the following books before deleting the author</div>

          <ul>
            <% genre_books.forEach(book=> { %>
              <li><a href=" <%= book.url %>">
                  <%= book.title %>
                </a>
                <br>
                <%= book.summary %> 
              </li>
              <br>
              <% }) %>
          </ul>
          <% } else { %>
            <div class="delete-sure">Are you sure you want to delete this genre?</div>
            <form action="" method="post">
              <input type="hidden" name="genreid" value="<%= genre._id %>">
              <input type="submit" value="Delete">
            </form>
            <% } %>
        </div>
      </div>

  </body>

</html>